<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/accent_material_light"
    tools:context="com.example.suraj.netpro.Q3">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="Q3.Which is the ICBM missile of India?"
        android:textSize="30sp" />

    <RadioGroup
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:id="@+id/radioGroup3"
        android:layout_above="@+id/button17"
        android:layout_alignLeft="@+id/button17"
        android:background="@color/accent_material_light"
        android:layout_alignStart="@+id/button17">

        <RadioButton
            android:id="@+id/radioButton11"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/accent_material_light"
            android:text="Agni-I" />

        <RadioButton
            android:id="@+id/radioButton12"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/accent_material_light"
            android:text="Agni-II" />

        <RadioButton
            android:id="@+id/radioButton13"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/accent_material_light"
            android:text="Agni-V" />

        <RadioButton
            android:id="@+id/radioButton14"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/accent_material_light"
            android:layout_weight="1"
            android:text="Agni-IV" />
    </RadioGroup>

    <Button
        android:id="@+id/button17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp"
        android:layout_marginStart="19dp"
        android:text="Previous"
        android:background="#cb821c" />

    <Button
        android:id="@+id/button18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:layout_below="@+id/radioGroup3"
        android:layout_centerHorizontal="true"
        android:background="#cb821c" />

    <Button
        android:id="@+id/button19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="NEXT"
        android:layout_alignTop="@+id/button18"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="24dp"
        android:background="#cb821c" />

</RelativeLayout>
